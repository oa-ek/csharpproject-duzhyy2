@model Goal

@{
    ViewData["Title"] = "Edit goal";

    var bills = ViewBag.Bills as List<SelectListItem>;
}

<div class="row justify-content-center mb-4">
    <div class="col-md-6 col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="text-center mb-3">Edit goal</h1>

                <form asp-action="Edit">
                    <div class="form-floating mb-3">
                        <input asp-for="Amount" class="form-control" id="amount" placeholder="name@example.com">
                        <label for="amount">Amount</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Note" class="form-control" id="note" placeholder="name@example.com">
                        <label for="note">Note</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="DateEnd" type="datetime-local" class="form-control" id="date">
                        <label for="date">Date end</label>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="BillId" asp-items="@(bills)" class="form-select" id="bills" aria-label="Floating label select example">
                            <option value="0" selected="selected">- Select bill -</option>
                        </select>
                        <label for="bills">Bills</label>
                    </div>

                    <button class="btn btn-lg btn-primary" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>