@model Guid

@{
    ViewData["Title"] = "Delete budget";
}

<div class="row justify-content-center mb-4">
    <div class="col-md-6 col-12">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h1 class="mb-3">Delete budget</h1>
                
                <form asp-action="Delete" enctype="multipart/form-data">
                    <input type="hidden" value="@Model">

                    <button class="btn btn-danger" type="submit">Are you sure you want to remove?</button>
                </form>
            </div>
        </div>
    </div>
</div>