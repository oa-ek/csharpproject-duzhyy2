@model Debt

@{
    ViewData["Title"] = "Edit debt";
}

<div class="row justify-content-center mb-4">
    <div class="col-md-6 col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="text-center mb-3">Edit debt</h1>

                <form asp-action="Edit">
                    <div class="form-floating mb-3">
                        <input asp-for="Amount" value="@Math.Round(Model.Amount, 2)" class="form-control" id="debt" placeholder="name@example.com">
                        <label for="debt">Amount</label>
                    </div>

                    <input type="hidden" value="@Model.Id">

                    <div class="form-floating mb-3">
                        <input asp-for="Note" value="@Model.Note" class="form-control" id="note" placeholder="name@example.com">
                        <label for="note">Note</label>
                    </div>

                    <button class="btn btn-lg btn-primary" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>