@model Debt

@{
    ViewData["Title"] = "Create debt";
}

<div class="row justify-content-center mb-4">
    <div class="col-md-6 col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="text-center mb-3">Create debt</h1>
                
                <form asp-action="Create">
                    <div class="form-floating mb-3">
                        <input asp-for="Amount" class="form-control" id="amount" placeholder="name@example.com">
                        <label for="amount">Amount</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Note" class="form-control" id="note" placeholder="name@example.com">
                        <label for="note">Note</label>
                    </div>

                    <button class="btn btn-lg btn-primary" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>