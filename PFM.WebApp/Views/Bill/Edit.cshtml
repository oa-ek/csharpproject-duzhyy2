@model Bill

@{
    var types = ViewBag.Types as List<SelectListItem>;
}

<div class="card">
    <div class="card-body">
        <h1 class="text-center mb-3">Edit bill</h1>
        
        <form asp-action="Edit">
            <div class="form-floating mb-3">
                <input asp-for="Title" class="form-control" id="title" placeholder="name@example.com">
                <label for="title">Title</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Amount" class="form-control" id="amount" placeholder="name@example.com">
                <label for="amount">Amount</label>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="TypeId" asp-items="@(types)" class="form-select" id="types" aria-label="Floating label select example">
                    <option value="0" selected="selected">- Select type -</option>
                </select>
                <label for="types">Types</label>
            </div>

            <button class="btn btn-lg btn-primary" type="submit">Submit</button>
        </form>
    </div>
</div>