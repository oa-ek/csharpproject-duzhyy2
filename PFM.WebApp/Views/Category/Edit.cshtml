@model Category

<div class="card">
    <div class="card-body">
        <h1 class="text-center mb-3">Edit category</h1>
        
        <form asp-action="Edit">
            <div class="form-floating mb-3">
                <input asp-for="Title" value="@Model.Title" class="form-control" id="amount" placeholder="name@example.com">
                <label for="amount">Title</label>
            </div>

            <button class="btn btn-lg btn-primary" type="submit">Submit</button>
        </form>
    </div>
</div>